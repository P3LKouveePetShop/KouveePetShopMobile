<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="4dp"
    android:id="@+id/list_layanan_id"
    android:theme="@style/Base.CardView"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/layanan_gambar"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@mipmap/ic_layanan_dog" />

        <TextView
            android:id="@+id/layanan_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/baloo"
            android:text="Nama Layanan"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#FF6C6C6C"/>

        <TextView
            android:id="@+id/layanan_ukuran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layanan_nama"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/baloo"
            android:text="Ukuran"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#FF6C6C6C"/>

        <TextView
            android:id="@+id/layanan_harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layanan_ukuran"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/baloo"
            android:text="Harga"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#FF6C6C6C"/>

        <TextView
            android:id="@+id/text_layanan_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/baloo"
            android:layout_toEndOf="@+id/layanan_gambar"
            android:text="Nama :"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#FF6C6C6C"/>

        <TextView
            android:id="@+id/text_layanan_ukuran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_layanan_nama"
            android:layout_marginStart="0dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/baloo"
            android:layout_toEndOf="@+id/layanan_gambar"
            android:text="Ukuran Hewan :"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#FF6C6C6C"/>

        <TextView
            android:id="@+id/text_layanan_harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_layanan_ukuran"
            android:layout_marginStart="0dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/baloo"
            android:layout_toEndOf="@+id/layanan_gambar"
            android:text="Harga :"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#FF6C6C6C"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>